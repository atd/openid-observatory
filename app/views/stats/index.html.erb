<% content_for :javascript do %>
  var title = "Enter your OpenID"
  $(".input_text").click(function(){
    if(this.value == title){
      this.value="";
    }
  });
  
    $(".input_text").blur(function(){
    if(this.value == ""){
      this.value= title;
    }
  });

<% end %>


<% content_for :item_on_header do %>
  <div class="header_submit">
        <div class="fancy_input">
            <% form_for @uri || Uri.new do |f| %>
              <%= f.error_messages %>
              <%= f.text_field :uri, :class=>"input_text",:value=>"Enter your OpenID" %>
              <%= f.submit 'Go!',:class=>"input_text_button" %>
            <% end -%>
        </div>
	</div>
<% end %>

<div id="stats" class="left span-23 last">
	<%= notification_area %>
	<% graphs(:title => nil,:append=>"&chma=30,30,30,30",:bg_color=>"f0f0f0",:size => '548x230',:chart_color => "f0f0f0" ).each do |g| %>
	  <%=render :partial=> "graphic_item",:locals=> {:g=>g}%>
	<%end%>
</div>