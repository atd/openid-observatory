<h1><%= title %></h1>

<table>
  <tr>
    <th><%= t(:title) %></th>
  </tr>

<% @feedbacks.each do |feedback| -%>
  <tr>
    <td><%=sanitize feedback.title %></td>
    <td><%= link_to t(:show), polymorphic_path(feedback) %></td>
    <td><%= link_to t(:edit), edit_polymorphic_path(feedback) %></td>
    <td><%= link_to t(:delete), polymorphic_path(feedback), :confirm => t(:are_you_sure), :method => :delete %></td>
  </tr>
<% end -%>
</table>

<br />

<%= link_to t(:new, :scope => :feedback), new_feedback_path %>
